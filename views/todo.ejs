<!DOCTYPE html>
<html lang="en">
<head>
    <title>Apana pyara nanhasa Todo List Application</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7f6;
            color: #5c5b5e;
            margin: 0;
            padding: 0;
            transition: background-color 0.3s;
        }

        h1 {
            background-color: #1565c0; /* Changed to blue */
            color: white;
            margin: 0;
            padding: 20px;
            text-align: center;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 20px;
        }

        ul li {
            background: #ffffff;
            border-left: 5px solid #1565c0; /* Changed to blue */
            margin-bottom: 10px;
            padding: 20px;
            position: relative;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.12);
            transition: all 0.2s ease-in-out;
        }

        ul li:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.18);
        }

        ul li a {
            color: #5c5b5e;
            text-decoration: none;
            font-weight: bold;
        }

        ul li a:hover {
            color: #1565c0; /* Changed to blue */
        }

        .delete-btn {
            color: #f44336;
            position: absolute;
            right: 10px;
            top: 10px;
        }

        .edit-btn {
            color: #ff9800;
            position: absolute;
            right: 40px;
            top: 10px;
        }

        form {
            background: #ffffff;
            padding: 20px;
            margin-top: 20px;
            border: 1px solid #ccc;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16);
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        input[type="text"] {
            width: calc(100% - 22px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
        }

        input[type="submit"] {
            background-color: #1565c0; /* Changed to blue */
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            transition: background-color 0.25s ease-in-out;
        }

        input[type="submit"]:hover {
            background-color: #0d47a1; /* Darker shade of blue */
        }
    </style>
</head>
<body>
    <h1>Enhanced Todo Lists</h1>
    <ul>
        <% todolist.forEach(function(todo, index) { %>
        <li>
            <a href="/todo/delete/<%= index %>" class="delete-btn">✘</a>
            <a href="/todo/<%= index %>" class="edit-btn">✎</a>
            <%- todo %>
        </li>
        <% }); %>
    </ul>

    <form action="/todo/add/" method="post">
        <p>
            <label for="newtodo">enter your task : </label>
            <input type="text" name="newtodo" id="newtodo" autofocus />
            <input type="submit" value="Add Task" />
        </p>
    </form>
</body>
</html>
